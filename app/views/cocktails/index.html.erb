<div class="banner" style="background-image: url('https://images.pexels.com/photos/948199/pexels-photo-948199.jpeg?auto=compress&cs=tinysrgb&h=650&w=940')">
  <div class="banner-content">
    <h1>Drinkages</h1>
    <p>"Eating's cheating"</p>
    <%= link_to "Grab a drink", new_cocktail_path(@cocktail), class: "btn btn-primary btn-lg"%>
  </div class="banner-content">

    <div class="container">
      <div class="row">
        <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-4">
            <div class="card";">
              <div class="card-category">Drink!?</div>
              <div class="card-description">
                <h2><%= cocktail.name %></h2>
                <%= link_to 'Tasty', cocktail_path(cocktail),class: "btn btn-secondary" %> |
                <%= link_to 'Nooo', cocktail, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-secondary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
